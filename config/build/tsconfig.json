{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "baseUrl": "../..",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "lib": [
      "dom",
      "es2017",
      "webworker"
    ],

    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"]
    }
  },

  "include": [
    "src/**/*",
    "src/node_modules/**/*",
    "config/env/**/*"
  ],

  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "static/*"
  ]
}