{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "context": "../..",
  "compilerOptions": {
    "baseUrl": "../..",
    "lib": [
      "DOM",
      "ES2017",
      "WebWorker"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/node_modules/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "static/*"
  ]
}